<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="283dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/img_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    ></LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginTop="9dp"
                    android:id="@+id/lin1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iconview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/titleview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_grey"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_below="@id/lin1"
                    android:layout_marginTop="3dp"
                    android:id="@+id/lin2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/real_grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/timeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/real_grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/viewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/real_grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/real_grey"
                        android:textSize="14sp" />

                </LinearLayout>


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view01"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/downbtn"
            android:background="#00ffffff"
            />

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_divider_line_margin"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/list_vertical_margin"
        android:background="@color/medium_grey" />

    </RelativeLayout>

</LinearLayout>


